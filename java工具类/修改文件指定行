  File file = new File(System.getProperty("user.dir") + "\\1.txt");
        System.out.println(file.getAbsoluteFile());

        int modifyline = 14;//要修改的行
        FileReader fileReader = null;
        BufferedReader in = null;
        FileWriter fileWriter = null;
        BufferedWriter bufferedWriter = null;
        PrintWriter out = null;

        try {
            fileReader = new FileReader(file);
            in = new BufferedReader(fileReader);

            fileWriter = new FileWriter(System.getProperty("user.dir") + "\\1.tmp");
            bufferedWriter = new BufferedWriter(fileWriter);
            out = new PrintWriter(bufferedWriter);
            String line;
            int count = 1;
            while ((line = in.readLine()) != null) {
                if (count == modifyline) {
                    out.println(line.replace(line, line + "\\20240617121323"));  //替换abc成def
                } else {
                    out.println(line);
                }
                count++;
            }
        } catch (IOException ex) {
            throw new RuntimeException(ex);
        } finally {
            try {
                assert out != null;
                out.close();
                bufferedWriter.close();
                fileWriter.close();
                in.close();
                fileReader.close();
            } catch (IOException ex) {
                ex.printStackTrace();
            }
            boolean delete = file.delete();
            if (delete) {
                System.out.println();
                File file1 = new File(System.getProperty("user.dir") + "\\1.tmp");
                File file2 = new File(System.getProperty("user.dir") + "\\1.txt");

                boolean b = file1.renameTo(file2);
                if (b) {
                    System.out.println("1.tmp已重命名为1.txt");
                }
            } else {
                System.out.println("1.txt删除失败");

            }
        }
